{
	"name": "minni",
	"version": "0.1.0",
	"description": "Persistent structured memory plugin for OpenCode AI agents",
	"license": "MIT",
	"author": "Ozmah",
	"repository": {
		"type": "git",
		"url": "https://github.com/Ozmah/minni"
	},
	"scripts": {
		"lint": "oxlint",
		"lint:fix": "oxlint --fix",
		"fmt": "oxfmt",
		"fmt:check": "oxfmt --check",
		"sync": "rsync -av --delete --exclude='viewer/node_modules' --exclude='viewer/.git' --include='minni.ts' --include='src/***' --include='viewer/***' --include='package.json' --include='tsconfig.json' --exclude='*' ./ ~/.config/opencode/plugins/minni/"
	},
	"dependencies": {
		"@opencode-ai/plugin": "1.1.42",
		"@tursodatabase/database": "^0.4.3",
		"drizzle-orm": "^1.0.0-beta.12-a5629fb"
	},
	"devDependencies": {
		"bun-types": "^1.3.8",
		"oxfmt": "^0.27.0",
		"oxlint": "^1.42.0"
	}
}
